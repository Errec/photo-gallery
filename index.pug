  body
    nav.nav
      a(href="https://jalapenho.surge.sh")
        div.logo_name alapenho
        img.logo_img(src="/img/logo/peper.png")
    div(class="m-p-g")
     div(class="m-p-g__thumbs" data-google-image-layout data-max-height="400")
      -var brands = [{name: 'carters',value: ['R$1', 'R$2', 'R$3', 'R$4', 'R$5', 'R$6', 'R$7', 'R$8', 'R$9', 'R$10', 'R$11', 'R$12', 'R$13', 'R$14', 'R$15', 'R$16']}];
      each brand in brands
        each value, index in brand.value
          div.img-container
            p.img-text=value
            div.img-logo(class="img-logo--" + brand.name)
            img.m-p-g__thumbs-img(src="/img/"+ brand.name +"/" + (index + 1) + ".jpg")

    <script>var elem = document.querySelector('.m-p-g');document.addEventListener('DOMContentLoaded',function() {var gallery = new MaterialPhotoGallery(elem);});</script>
